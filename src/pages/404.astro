---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="e404">
        <h1>404</h1>
        <a href="/">back home</a>
    </div>
</Layout>

<style>
    .e404 {
        position: relative;
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
        justify-content: center;
    }

    .e404 h1 {
        font-size: 10rem;
    }

      .e404 a {
        position: relative;
        display: inline-block;
        color: var(--black);
    }

    .e404 a::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1px;
        background-color: var(--black);
        transition: width 0.3s ease;
    }

    .e404 a:hover::after {
        width: 100%;
    }
</style>